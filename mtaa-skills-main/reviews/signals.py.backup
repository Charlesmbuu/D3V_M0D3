from django.db.models.signals import post_save, post_delete
from django.dispatch import receiver
from .models import Review, ProviderStats

@receiver(post_save, sender=Review)
def update_provider_stats_on_save(sender, instance, **kwargs):
    """Update provider stats when a review is saved"""
    stats, created = ProviderStats.objects.get_or_create(provider=instance.provider)
    stats.update_stats()

@receiver(post_delete, sender=Review)
def update_provider_stats_on_delete(sender, instance, **kwargs):
    """Update provider stats when a review is deleted"""
    stats, created = ProviderStats.objects.get_or_create(provider=instance.provider)
    stats.update_stats()
